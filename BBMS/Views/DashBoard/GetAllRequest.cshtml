@{
    ViewData["Title"] = "GetAllRequest";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="container mt-2 ">
    <h3 class="display-4 m-3 text-lg-center" style="font-size:25px">Request History</h3>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">Disease</th>
                <th scope="col">Blood Group</th>
                <th scope="col">Unit</th>
                <th scope="col">Date</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        @{ 
            int i = 1;
        }
        <tbody>
                @foreach (var item in Model)
                {
            <tr>
                <td>@(i++)</td>
                <td>@item.PetientName</td>
                <td>@item.PetientAge</td>
                <td>@item.Disease</td>
                <td>@item.BloodGroup</td>
                <td>@item.Unit</td>
                <td>@item.RequestDate</td>
                <td><button type="button" class="btn btn-secondary">@item.RequestStatus</button></td>
            </tr>
                }
        </tbody>
    </table>
</div>
