@model BBMS.Models.SignUpUserModel
@{
    ViewData["Title"] = "SignUp";
}

<div class="container" style="margin-top: 3rem; width: 1200px;">
    <h1 class="display-4 text-sm-center">SignUp</h1>
    <br />
    <div class="row">
        <div class="col-md-4 offset-4" style="padding: 35px; border: 1px solid black; border-radius: 10px; background-color: #eff6ff; font-size: 1.3rem">
            <form asp-action="SignUp">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Fname" class="control-label"></label>
                    <input style="font-size: 1.3rem" asp-for="Fname" class="form-control" />
                    <span asp-validation-for="Fname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lname" class="control-label"></label>
                    <input style="font-size: 1.3rem" asp-for="Lname" class="form-control" />
                    <span asp-validation-for="Lname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input style="font-size: 1.3rem" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <label asp-for="RoleName" class="control-label"></label>
                @Html.DropDownListFor(m => m.RoleName, new SelectList(ViewBag.Roles, "Value", "Text"), new { @class = "form-control" })
                <span asp-validation-for="RoleName" class="text-danger"></span>
                <br />
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input style="font-size: 1.3rem" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input style="font-size: 1.3rem" asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input style="font-size: 1.4rem" type="submit" value="SignUp" class="btn btn-primary" />
                </div>
            </form>
            <div class="text-center">
                Already Have Account.. <a asp-action="Login" asp-controller="Account">Click Here!</a> to Login.
            </div>
        </div>
    </div>


</div>


