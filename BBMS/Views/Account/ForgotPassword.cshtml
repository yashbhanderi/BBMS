@model BBMS.Models.ForgotPasswordModel

@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="container" style="margin-top: 10rem; width: 1200px;">

    <h4 class="display-4 text-sm-center">Forgot Password</h4>
    <br />
    <div class="row">
        <div class="col-md-4 offset-4" style="padding: 35px; border: 1px solid black; border-radius: 10px; background-color: #eff6ff; font-size: 1.3rem">
            @if (Model?.EmailSent == true) {
                <div class="alert alert-success" role="alert">
                    <p>We have sent an email on your registered email.</p>
                </div>
            }
            else {
                <p>Forgot your password? <br /> No Worries you can reset it easily.</p>
                <br />
                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input style="font-size: 1.3rem" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input style="font-size: 1.4rem" type="submit" value="Continue" class="btn btn-primary" />
                    </div>
                </form>

            }
            <div class="text-center">
                ⬅️ Back To <a asp-action="Login"  style="font-size: 1.3rem" asp-controller="Account">Login</a>
            </div>
        </div>
    </div>
</div>
